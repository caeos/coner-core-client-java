{
  "package": {
    "name": "coner-core-client-java",
    "repo": "coner-core",
    "subject": "caeos",
    "desc": "Java client for Coner Core",
    "website_url": "https://github.com/caeos/coner-core-client-java",
    "issue_tracker_url": "https://github.com/caeos/coner-core/issues",
    "vcs_url": "git@github.com:caeos/coner-core-client-java.git",
    "github_use_tag_release_notes": false,
    "licenses": ["MIT"],
    "labels": ["coner core", "client", "java"],
    "public_download_numbers": false,
    "public_stats": false
  },

  "version": {
    "name": "${version.name}",
    "desc": "${version.desc}",
    "released": "${version.released}",
    "vcs_tag": "${version.vcs_tag}",
    "gpgSign": false
  },

  "files": [
    {
      "includePattern": "target/(coner-core-client-java.*\\.jar)",
      "excludePattern": "target/(.*tests.*)",
      "uploadPattern": "/$1"
    }
  ],
  "publish": true
}